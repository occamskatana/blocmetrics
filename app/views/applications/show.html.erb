<div class="container-fluid">
	<h1 align="center"><%= @application.name %></h1>
	<h4 align="center"><%= @application.url %></h4>
</div>

<div class="container-fluid">
	<div class="container">
		<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
		<%= pie_chart @application.events.group(:name).count %>
	</div>
</div>

<h3 align="center"> <u><%= @events.count %> Events Logged</u></h3>
<div class="container-fluid">	
	<% @events.each do |e| %>
		<div class="row well">
			<div class="col-md-4">
				<%= e.name %>
			</div>
			<div class="col-md-4">
				Event Timestamp: <strong><%= e.created_at %></strong>
			</div>
			<div class="col-md-4">
				Event ID: <%=e.id %>
			</div>
		</div>
	<% end %>
</div>
