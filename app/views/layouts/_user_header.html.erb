<div class="pull-right user-info">
	
		<% if !current_user %>
		<div class="user">
			<%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-success' %>
			<%= link_to "Sign In", new_user_session_path, class: 'btn btn-info' %>
	
		<% else %>
		<div class="user">
				<h3 align="center"> <strong><%= current_user.user_name %></strong></h3>
				<%= link_to "My Account","", class: 'btn btn-primary' %>
				<%= link_to "Sign Out", destroy_user_session_path, class: 'btn btn-danger', method: :delete %>
		<% end %>
		</div>
</div>